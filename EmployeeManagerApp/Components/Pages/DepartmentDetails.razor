<h3>DepartmentDetails</h3>

<h1>Details</h1>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Department Name
        </dt>
        <dd class="col-sm-10">
            @department.DepartmentName
        </dd>
        <dt class="col-sm-2">
            Created Time
        </dt>
        <dd class="col-sm-10">
            @department.CreatedTime
        </dd>
    </dl>
    <h3>Employees of @department.DepartmentName</h3>
    @foreach (var item in department.Employees)
    {
        <h6 class="text-primary">@item.EmployeeName</h6>
    }
</div>
<div>
    <NavLink href="@String.Format("Deparments/Index")">Back to List</NavLink>
</div>



@code {
    [Parameter]
    public Department department { get; set; }

}
