<h3>EmployeeDetails</h3>


<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Employee Name
        </dt>
        <dd class="col-sm-10">
            @employee.EmployeeName
        </dd>
        <dt class="col-sm-2">
            Salary
        </dt>
        <dd class="col-sm-10">
            @employee.Salary
        </dd>
        <dt class="col-sm-2">
            Created Time
        </dt>
        <dd class="col-sm-10">
            @employee.CreatedTime
        </dd>
        <dt class="col-sm-2">
            <h4>Employee Deparment</h4>
        </dt>
        <dd class="col-sm-10">
            <h5>@employee.EmployeeDept.DepartmentName</h5>
        </dd>

    </dl>
</div>
<div>
  
    <NavLink href="@String.Format("Employees/index")" class="btn-sm btn-warning">Back to list</NavLink>|
</div>

@code {
    [Parameter]
    public Employee employee { get; set; }

}
